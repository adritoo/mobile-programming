<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/viewOperation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/viewResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:id="@+id/linear">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/numberSeven"
                    android:tag="7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="myClickHandler"
                    android:layout_weight="1"
                    android:text="7"/>

                <Button
                    android:id="@+id/numberEight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="myClickHandler"
                    android:layout_weight="1"
                    android:tag="8"
                    android:text="8" />

                <Button
                    android:id="@+id/numberNine"
                    android:layout_width="match_parent"
                    android:onClick="myClickHandler"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tag="9"
                    android:text="9" />

                <Button
                    android:id="@+id/add"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="myClickHandler"
                    android:layout_weight="1"
                    android:tag="+"
                    android:text="+" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/numberFour"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:tag="4"
                    android:onClick="myClickHandler"
                    android:text="4" />

                <Button
                    android:id="@+id/numberFive"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="myClickHandler"
                    android:tag="5"
                    android:text="5" />

                <Button
                    android:id="@+id/numberSix"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="myClickHandler"
                    android:tag="6"
                    android:text="6" />

                <Button
                    android:id="@+id/minus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="myClickHandler"
                    android:tag="-"
                    android:text="-" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/numberOne"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="myClickHandler"
                    android:layout_weight="1"
                    android:tag="1"
                    android:text="1" />

                <Button
                    android:id="@+id/numberTwo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="myClickHandler"
                    android:tag="2"
                    android:text="2" />

                <Button
                    android:id="@+id/numberTree"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="myClickHandler"
                    android:tag="3"
                    android:text="3" />

                <Button
                    android:id="@+id/multiply"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="myClickHandler"
                    android:tag="*"
                    android:text="*" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/numberZero"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="myClickHandler"
                    android:layout_weight="1"
                    android:tag="0"
                    android:text="0" />

                <Button
                    android:id="@+id/divide"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="myClickHandler"
                    android:layout_weight="1"
                    android:tag="/"
                    android:text="/" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/equals"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="="
                android:onClick="myClickHandler"
                android:tag="="/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>